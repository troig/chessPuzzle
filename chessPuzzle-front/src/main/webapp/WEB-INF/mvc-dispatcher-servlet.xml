<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">


    <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/view/"/>
        <property name="suffix" value=".jsp"/>
    </bean>

    <!-- Bean for chess puzzle solver: Algorithm based on backtracking -->
    <bean id="chessPuzzleSolver"
          class="uk.tryCatch.javaDeveloper.chessPuzzle.solverService.impl.BacktrackChessPuzzleSolverService"/>

    <!-- Beans for mvc controller -->
    <context:component-scan base-package="uk.tryCatch.javaDeveloper.front.controller"/>

</beans>
